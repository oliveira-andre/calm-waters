<div class="row">
  <div class="col-md-12">
    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="fa fa-edit"></i> Listar Espécies</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
          <li class="breadcrumb-item">Espécies</li>
          <li class="breadcrumb-item">
            <a href="#" class="a_black">listar</a>
          </li>
        </ul>
      </div>

      <div class="tile">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Preço</th>
            <th>Peso</th>
            <th>Ração da Espécie</th>
            <th>Condição Ambiental</th>
            <th>Nome da Espécie</th>
            <th>Observação</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @species.each do |species| %>
            <tr>
              <td class="td_money"><%= species.price %></td>
              <td><%= species.weight %></td>
              <td><%= species.food_specie %></td>
              <td><%= species.ambiental_condition %></td>
              <td><%= species.specie_name %></td>
              <td><%= species.observation %></td>
              <td>
                <%= link_to "<i class='fa fa-edit'></i><span> Editar</span>".html_safe, edit_species_path(species), class: "btn btn-outline-primary" %>
                <%= link_to "<i class='fa fa-trash'></i><span> Excluir</span>".html_safe, species, method: :delete, data: {confirm: "Você tem certeza"}, class: "btn btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>