<p id="notice"><%= notice %></p>

<h1>Species</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Weight</th>
      <th>Food specie</th>
      <th>Ambiental condition</th>
      <th>Specie name</th>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @species.each do |species| %>
      <tr>
        <td><%= species.price %></td>
        <td><%= species.weight %></td>
        <td><%= species.food_specie %></td>
        <td><%= species.ambiental_condition %></td>
        <td><%= species.specie_name %></td>
        <td><%= species.observation %></td>
        <td><%= link_to 'Show', species %></td>
        <td><%= link_to 'Edit', edit_species_path(species) %></td>
        <td><%= link_to 'Destroy', species, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

