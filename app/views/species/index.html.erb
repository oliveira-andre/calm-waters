<div class="row">
  <div class="col-md-12">
    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="fa fa-edit"></i> Listar Espécies</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
          <li class="breadcrumb-item">Espécies</li>
          <li class="breadcrumb-item">
            <a href="#" class="a_black">listar</a>
          </li>
        </ul>
      </div>

      <div class="tile">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Price</th>
            <th>Weight</th>
            <th>Food specie</th>
            <th>Ambiental condition</th>
            <th>Specie name</th>
            <th>Observation</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @species.each do |species| %>
            <tr>
              <td><%= species.price %></td>
              <td><%= species.weight %></td>
              <td><%= species.food_specie %></td>
              <td><%= species.ambiental_condition %></td>
              <td><%= species.specie_name %></td>
              <td><%= species.observation %></td>
              <td><%= link_to 'Show', species %></td>
              <td><%= link_to 'Edit', edit_species_path(species) %></td>
              <td><%= link_to 'Destroy', species, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>