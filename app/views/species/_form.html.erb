<div class="row">
  <div class="col-md-12">
    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="fa fa-edit"></i> Criar Espécies</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
          <li class="breadcrumb-item">Espécies</li>
          <li class="breadcrumb-item">
            <a href="#" class="a_black">cadastrar</a>
          </li>
        </ul>
      </div>
      <div class="tile">
        <%= simple_form_for(@specie) do |f| %>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :specie_name, input_html: {class: "form-control"}, label: "Nome da Espécie", error: "Nome da Espécie não pode ficar em branco" %>
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <%= f.input :price, input_html: {class: "form-control money", placeholder: "R$"}, label: "Preço", error: "Preço não pode ficar em branco" %>
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <%= f.input :weight, input_html: {class: "form-control"}, label: "Peso", error: "Peso não pode ficar em branco" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.association :food_specie, input_html: {class: "form-control"}, label: "Ração da Espécie", error: "Ração da Espécie não pode ficar em branco" %>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <%= f.association :ambiental_condition, input_html: {class: "form-control"}, label: "Condição Ambiental", error: "Condição Ambiental não pode ficar em branco" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.input :observation, input_html: {class: "form-control"}, label: "Observação", error: "Observação não pode ficar em branco" %>
              </div>
            </div>
          </div>


          <div class="row">
            <div class="col-md-12">
              <%= button_tag(type: "submit", class: "btn btn-primary pull-right") do %>
                <i class="fa fa-save"></i>
                <span>Salvar</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </main>
  </div>
</div>