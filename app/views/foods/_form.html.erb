<div class="row">
  <div class="col-md-12">
    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="fa fa-edit"></i> Adicionar Ração</h1>
          <p>Bootstrap default form components</p>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
          <li class="breadcrumb-item">Ração</li>
          <li class="breadcrumb-item">
            <a href="#" class="a_black">cadastrar</a>
          </li>
        </ul>
      </div>
      <div class="tile">
        <%= simple_form_for(@food) do |f| %>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.association :food_type, input_html: {class: "form-control"}, label: "Tipo de Ração" %>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :name, input_html: {class: "form-control"}, label: "Nome" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :composition, input_html: {class: "form-control"}, label: "Composição" %>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :observation, input_html: {class: "form-control"}, label: "Observação" %>
              </div>
            </div>
          </div>


          <div class="row">
            <div class="col-md-12">
              <%= button_tag(type: "submit", class: "btn btn-primary pull-right") do %>
                <i class="fa fa-save"></i>
                <span>Salvar</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </main>
  </div>
</div>