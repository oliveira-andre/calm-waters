<div class="row">
  <div class="col-md-12">
    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="fa fa-edit"></i> Listar Ração</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
          <li class="breadcrumb-item">Ração</li>
          <li class="breadcrumb-item">
            <a href="#" class="a_black">listar</a>
          </li>
        </ul>
      </div>

      <div class="tile">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Food type</th>
            <th>Name</th>
            <th>Composition</th>
            <th>Observation</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @foods.each do |food| %>
            <tr>
              <td><%= food.food_type %></td>
              <td><%= food.name %></td>
              <td><%= food.composition %></td>
              <td><%= food.observation %></td>
              <td><%= link_to 'Show', food %></td>
              <td><%= link_to 'Edit', edit_food_path(food) %></td>
              <td><%= link_to 'Destroy', food, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>