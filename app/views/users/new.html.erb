<div class="row">
  <div class="col-md-12">
    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="fa fa-edit"></i> Criar Usuário</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
          <li class="breadcrumb-item">Usuário</li>
          <li class="breadcrumb-item">
            <a href="#" class="a_black">cadastrar</a>
          </li>
        </ul>
      </div>
      <div class="tile">
        <%= simple_form_for(@user) do |f| %>
          <div class="row">
            <div class="col-md-6">
              <%= f.input :name, label: "Nome", input_html: {class: "form-control"}, error: "Nome não pode ficar em branco" %>
            </div>
            <div class="col-md-6">
              <%= f.input :cpf, label: "CPF", input_html: {class: "form-control cpf"}, error: "CPF não pode ficar em branco" %>
            </div>
          </div>
          <div class="row" style="margin-top: 10px;">
            <div class="col-md-6">
              <%= f.association :perfil, label: "Tipo do perfil", input_html: {class: "form-control"} %>
            </div>
            <div class="col-md-6">
              <%= f.input :password, label: "Senha", input_html: {class: "form-control"}, error: "Senha não pode ficar em branco" %>
            </div>
          </div>

          <div class="row" style="margin-top: 10px;">
            <div class="col-md-12">
              <%= button_tag(type: "button", class: "btn btn-primary pull-right btn_create_user") do %>
                <i class="fa fa-save"></i>
                <span>Salvar</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </main>
  </div>
</div>