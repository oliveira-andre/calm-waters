<div class="row">
  <div class="col-md-12">
    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="fa fa-edit"></i> Listar Tipos para Espécies</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
          <li class="breadcrumb-item">Tipos para Espécies</li>
          <li class="breadcrumb-item">
            <a href="#" class="a_black">listar</a>
          </li>
        </ul>
      </div>

      <div class="tile">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Food</th>
            <th>Food quantity</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @food_species.each do |food_specy| %>
            <tr>
              <td><%= food_specy.food %></td>
              <td><%= food_specy.food_quantity %></td>
              <td><%= link_to 'Show', food_specy %></td>
              <td><%= link_to 'Edit', edit_food_specy_path(food_specy) %></td>
              <td><%= link_to 'Destroy', food_specy, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>