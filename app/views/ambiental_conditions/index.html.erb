<div class="row">
  <div class="col-md-12">
    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="fa fa-edit"></i> Listar Condições Ambientais</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
          <li class="breadcrumb-item">Condições Ambientais</li>
          <li class="breadcrumb-item">
            <a href="#" class="a_black">listar</a>
          </li>
        </ul>
      </div>

      <div class="tile">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Temperatura Ideal</th>
            <th>Oxigenio Ideal</th>
            <th>PH Ideal</th>
            <th>Amonia Ideal</th>
            <th>Acidez Ideal</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @ambiental_conditions.each do |ambiental_condition| %>
            <tr>
              <td><%= ambiental_condition.ideal_temperature %></td>
              <td><%= ambiental_condition.ideal_oxigen %></td>
              <td><%= ambiental_condition.ideal_ph %></td>
              <td><%= ambiental_condition.ideal_ammonia %></td>
              <td><%= ambiental_condition.ideal_acidity %></td>
              <td>
                <%= link_to "<i class='fa fa-edit'></i><span> Editar</span>".html_safe, edit_ambiental_condition_path(ambiental_condition), class: "btn btn-outline-primary" %>
                <%= link_to "<i class='fa fa-trash'></i><span> Excluir</span>".html_safe, ambiental_condition, method: :delete, data: {confirm: "Você tem certeza?"}, class: "btn btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>