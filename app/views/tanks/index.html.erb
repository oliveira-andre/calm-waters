<div class="row">
  <div class="col-md-12">
    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="fa fa-edit"></i> Listar Tanques</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
          <li class="breadcrumb-item">tanques</li>
          <li class="breadcrumb-item">
            <a href="#" class="a_black">listar</a>
          </li>
        </ul>
      </div>

      <div class="tile">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Usuário</th>
            <th>Espécie</th>
            <th>Data de População</th>
            <th>Quantidade Inicial</th>
            <th>Data da Despopulação</th>
            <th>Quantidade Final</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @tanks.each do |tank| %>
            <tr>
              <td><%= tank.user %></td>
              <td><%= tank.specie %></td>
              <td><%= tank.population_date %></td>
              <td><%= tank.initial_quantity %></td>
              <% if tank.depopulation_date %>
                <td><%= tank.depopulation_date %></td>
              <% else %>
                <td>-</td>
              <% end %>
              <% if tank.final_quantity %>
                <td><%= tank.final_quantity %></td>
              <% else %>
                <td>-</td>
              <% end %>
              <td>
                <%= link_to "<i class='fa fa-edit'></i><span> Editar</span>".html_safe, edit_tank_path(tank), class: "btn btn-outline-primary" %>
                <%= link_to "<i class='fa fa-trash'></i><span> Excluir</span>".html_safe, tank, method: :delete, data: {confirm: "Você tem certeza?"}, class: "btn btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>