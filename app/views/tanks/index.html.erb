<p id="notice"><%= notice %></p>

<h1>Tanks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Specie</th>
      <th>Population date</th>
      <th>Initial quantity</th>
      <th>Depopulation date</th>
      <th>Final quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tanks.each do |tank| %>
      <tr>
        <td><%= tank.user %></td>
        <td><%= tank.specie %></td>
        <td><%= tank.population_date %></td>
        <td><%= tank.initial_quantity %></td>
        <td><%= tank.depopulation_date %></td>
        <td><%= tank.final_quantity %></td>
        <td><%= link_to 'Show', tank %></td>
        <td><%= link_to 'Edit', edit_tank_path(tank) %></td>
        <td><%= link_to 'Destroy', tank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

