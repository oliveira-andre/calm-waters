<div class="row">
  <div class="col-md-12">
    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="fa fa-edit"></i> Listar Monitoramentos</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
          <li class="breadcrumb-item">Monitoramentos</li>
          <li class="breadcrumb-item">
            <a href="#" class="a_black">listar</a>
          </li>
        </ul>
      </div>

      <div class="tile">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Tanque</th>
            <th>Data de Monitoramento</th>
            <th>PH</th>
            <th>Oxigênio</th>
            <th>Colagem</th>
            <th>Quantidade de Fertilizante</th>
            <th>Quantidade de Comida Diária</th>
            <th>Doenças</th>
            <th>Procedimentos</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @monitoring_histories.each do |monitoring_history| %>
            <tr>
              <td><%= monitoring_history.tank %></td>
              <td><%= monitoring_history.monitoring_date %></td>
              <td><%= monitoring_history.ph %></td>
              <td><%= monitoring_history.oxigen %></td>
              <td><%= monitoring_history.liming %></td>
              <td><%= monitoring_history.quantity_fetilizing %></td>
              <td><%= monitoring_history.quantitiy_food_daily %></td>
              <td><%= monitoring_history.disease %></td>
              <td><%= monitoring_history.procedimentos %></td>
              <td>
                <%= link_to "<i class='fa fa-edit'></i><span> Editar</span>".html_safe, edit_monitoring_history_path(monitoring_history), class: "btn btn-outline-primary" %>
                <%= link_to "<i class='fa fa-trash'></i><span> Excluir</span>".html_safe, monitoring_history, method: :delete, data: {confirm: "Você tem certeza?"}, class: "btn btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>