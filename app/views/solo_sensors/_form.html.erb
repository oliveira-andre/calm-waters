<div class="row">
  <div class="col-md-12">
    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="fa fa-edit"></i> Adicionar Dados Para sensor de Solo</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
          <li class="breadcrumb-item">Sensores de solo</li>
          <li class="breadcrumb-item">
            <a href="#" class="a_black">cadastrar</a>
          </li>
        </ul>
      </div>
      <div class="tile">
        <%= simple_form_for(@solo_sensor) do |f| %>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.association :tank, input_html: {class: "form-control"}, label: "Tanque" %>
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <%= f.input :calcium, input_html: {class: "form-control"}, label: "Cálcio" %>
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <%= f.input :ph, input_html: {class: "form-control"}, label: "PH" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :phosphoror, input_html: {class: "form-control"}, label: "Fósforo" %>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :carbon, input_html: {class: "form-control"}, label: "Carbono" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <%= button_tag(type: "submit", class: "btn btn-primary pull-right") do %>
                <i class="fa fa-save"></i>
                <span>Salvar</span>
              <% end %>
            </div>
          </div>

        <% end %>
      </div>
    </main>
  </div>
</div>