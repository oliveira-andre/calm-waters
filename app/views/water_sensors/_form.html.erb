
<%= simple_form_for(@water_sensor) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :tank %>
    <%= f.input :calcium %>
    <%= f.input :ph %>
    <%= f.input :phosphoror %>
    <%= f.input :hydrogen %>
    <%= f.input :oxigen %>
    <%= f.input :acidity %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
